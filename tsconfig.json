{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "rootDir": "./src",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "src/__tests__"]
}
